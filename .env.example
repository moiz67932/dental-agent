# --- AI Provider Keys ---
CARTESIA_API_KEY=your-cartesia-api-key
DEEPGRAM_API_KEY=your-deepgram-api-key
OPENAI_API_KEY=your-openai-api-key

# --- LiveKit Cloud ---
LIVEKIT_URL=wss://your-livekit-domain.livekit.cloud
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret

# --- Google Calendar Integration ---
GCAL_ID=your-calendar-id@group.calendar.google.com
GCAL_CREDS=calendar_tools/dental-ai-agent.json
TZ=Asia/Karachi              # Local timezone of the clinic
OPEN_HOURS=09:00-17:00       # Format: HH:MM-HH:MM
SLOT_MINUTES=30              # Appointment duration in minutes

# --- PostgreSQL DB for RAG ---
PG_DB=your-database-name
PG_USER=your-db-username
PG_PASS=your-db-password
PG_HOST=localhost
PG_PORT=5432

# --- Email SMTP Settings ---
SMTP_HOST=smtp.yourmail.com
SMTP_PORT=587
SMTP_USER=your@email.com
SMTP_PASS=your-smtp-password
SMTP_FROM="Clinic Name <your@email.com>"

# --- Twilio / WhatsApp Messaging ---
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890
TWILIO_TEMPLATE_SID=your-twilio-template-id
